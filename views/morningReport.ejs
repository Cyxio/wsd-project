<%- include('./partials/header.ejs') %>
<h1>Morning report</h1>
<%- include('./partials/errors.ejs') %>
<% const names = ['', 'Very poor', 'Bad', 'Okay', 'Good', 'Excellent']; %>
<form method="POST" action="/behavior/reporting/morning">
    <h3>Sleep duration</h3>
    <label for="sleep_d">Number of hours slept</label>
    <input type="number" id="sleep_d" name="sleep_duration" step="0.1" value="<%=populated[0]%>">
    <h3>Sleep quality</h3>
    <div class="row">
        <% for( let index = 1; index < 6; index++ ) { %>
        <div class="column">
            <input type="radio" id="sleep<%=index%>" name="sleep_quality" value="<%=index%>" <% if (populated.includes(`sleep${index}`)) { %>checked="checked"<% } %>>
            <label class="label-inline" for="sleep<%=index%>"><b><%=names[index]%></b></label>
        </div>
        <% } %>
    </div>
    <h3>Generic mood</h3>
    <div class="row">
        <% for( let index = 1; index < 6; index++ ) { %>
        <div class="column">
            <input type="radio" id="mood<%=index%>" name="mood" value="<%=index%>" <% if (populated.includes(`mood${index}`)) { %>checked="checked"<% } %>>
            <label class="label-inline" for="mood<%=index%>"><b><%=names[index]%></b></label>
        </div>
        <% } %>
    </div>
    <h3>Date for submission</h3>
    <input type="date" name="date" value="<%= dateToday %>">
    <input type="submit" value="Submit report">
</form>
<%- include('./partials/footer.ejs') %>
